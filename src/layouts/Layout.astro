---
import { setDescription, setTitle } from "@/utils";
import Navbar from "@/components/nav/Navbar.astro";
import Footer from "@/components/Footer.astro";
import { SEO } from "astro-seo";
import type { Props as IAstroSEO } from "astro-seo";
import { GoogleFontsOptimizer } from "astro-google-fonts-optimizer";
interface Props extends IAstroSEO {}
const { title = "", description = "", ...props } = Astro.props;
import "@/style.css";
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" /> 
    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png">
<link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png">
<link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png">
<link rel="manifest" href="/site.webmanifest">
    <meta name="generator" content={Astro.generator} />

    <SEO
      title={setTitle(title)}
      description={setDescription(description)}
      {...props}
    />

    <GoogleFontsOptimizer
      url={[
        "https://fonts.googleapis.com/css2?family=Space+Grotesk:wght@300;400;500;600;700&display=swap",
      ]}
    />
    <slot name="head" />
  </head>
  <body
    class="bg-gradient-to-br min-h-full flex flex-col from-slate-800 font-space-grotesk text-lg leading-6 text-white via-slate-900 to-neutral-600 bg-fixed"
  >
    <Navbar />

    <main class="flex-1">
      <slot />
    </main>
    <Footer />
    <style is:global>
      html {
        height: 100%;
      }
    </style>
  </body>
</html>
